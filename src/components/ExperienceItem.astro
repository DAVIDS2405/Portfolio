---
interface Props {
  date: string;
  title: string;
  description: string;
  company: string;
  link?: string;
}
const { date, title, description, company, link } = Astro.props;
---

<div
  class="absolute size-3 bg-red-300 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900"
>
</div>

<div class="flex flex-col lg:flex-row">
  <div class="flex flex-col w-full gap-y-2 mr-5">
    <h2 class="text-xs w-fit text-gray-900 dark:text-red-300">
      {title}
    </h2>

    <h3 class="text-[0.70rem] text-gray-900 dark:text-white">
      {company}
    </h3>
    <time
      class="mb-8 text-[0.70rem] leading-none text-gray-400 dark:text-gray-300"
      >{date}</time
    >
  </div>
  <div class="flex flex-col items-center">
    <p
      class="mb-4 text-[0.70rem] text-pretty max-w-6xl text-gray-500 dark:text-gray-300"
    >
      {description}
    </p>
    {
      link && (
        <a
          href="#"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
        >
          Learn more{" "}
          <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>
